<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cardInquilino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/borda_inquilino"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imgInquilino"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/txtInquilino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Carregando..."
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnVincular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vincular Inquilino" />

    <Button
        android:id="@+id/btnDesvincular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desvincular Inquilino"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnNovoInquilino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novo Inquilino"
        android:layout_marginTop="16dp" />
</LinearLayout>
